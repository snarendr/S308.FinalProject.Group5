<Window x:Class="FitnessClub.MembershipRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="MembershipRegistration" Height="500" Width="750" Background="#FFBF3417">
    <Grid>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Images/MSNLogo.png"/>
        <Label x:Name="lblFirstName" Content="First Name:" HorizontalAlignment="Left" Margin="7,143,0,0" VerticalAlignment="Top" Foreground="#FFF0E9E9" Height="34" Width="93"/>
        <Label x:Name="lblLastName" Content="Last Name:" HorizontalAlignment="Left" Margin="8,189,0,0" VerticalAlignment="Top" Foreground="#FFFDF6F6" Height="34" Width="92"/>
        <Label x:Name="lblCreditType" Content="Credit Card Type:" HorizontalAlignment="Left" Margin="8,235,0,0" VerticalAlignment="Top" Foreground="#FFFBF7F7" Height="34" Width="108"/>
        <Label x:Name="lblCreditCardNum" Content="Credit Card Number:" HorizontalAlignment="Left" Margin="8,279,0,0" VerticalAlignment="Top" Foreground="#FFF7F1F1" Height="35" Width="120"/>
        <Label x:Name="lblPhone" Content="Phone Number:" HorizontalAlignment="Left" Margin="369,143,0,0" VerticalAlignment="Top" Foreground="#FFF7E4E4" Height="34" Width="123"/>
        <Label x:Name="lblEmail" Content="Email Address:" HorizontalAlignment="Left" Margin="369,177,0,0" VerticalAlignment="Top" Foreground="#FFF5EBEB" Height="34" Width="115"/>
        <Label x:Name="lblGender" Content="Gender:" HorizontalAlignment="Left" Margin="369,210,0,0" VerticalAlignment="Top" Foreground="#FFF5EBEB" Height="34" Width="68"/>
        <Label x:Name="lblAge" Content="Age:" HorizontalAlignment="Left" Margin="369,245,0,0" VerticalAlignment="Top" Foreground="#FFF1E9E9" Height="34" Width="45"/>
        <Label x:Name="lblWeight" Content="Weight:" HorizontalAlignment="Left" Margin="369,285,0,0" VerticalAlignment="Top" Foreground="#FFFBF2F2" Height="34" Width="68"/>
        <Label x:Name="lblPersonalFitGoal" Content="Personal Fitness Goal:" HorizontalAlignment="Left" Margin="7,331,0,0" VerticalAlignment="Top" Foreground="#FFFBF9F9" Height="34" Width="166"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="30" Margin="106,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="30" Margin="106,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="txtCredCardNum" HorizontalAlignment="Left" Height="31" Margin="133,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174"/>
        <ComboBox x:Name="cmbCredCardType" HorizontalAlignment="Left" Margin="116,235,0,0" VerticalAlignment="Top" Width="159" Height="29">
            <ComboBoxItem x:Name="cmbOption1" Content="Visa" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="cmbOption2" Content="MasterCard" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="cmbOption3" Content="American Express" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="cmbOption4" Content="Discover" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <CheckBox x:Name="chbAthPer" Content="Athletic Performance" HorizontalAlignment="Left" Margin="179,339,0,0" VerticalAlignment="Top" Foreground="#FFFBF0F0" Height="19" Width="173"/>
        <CheckBox x:Name="chbOverHealth" Content="Overall Health" HorizontalAlignment="Left" Margin="179,365,0,0" VerticalAlignment="Top" Foreground="#FFFBEEEE" Height="19" Width="125"/>
        <CheckBox x:Name="chbST" Content="Strength Training" HorizontalAlignment="Left" Margin="179,391,0,0" VerticalAlignment="Top" Foreground="#FFF7EFEF" Height="20" Width="148"/>
        <CheckBox x:Name="chbWeightLoss" Content="Weight Loss" HorizontalAlignment="Left" Margin="179,417,0,0" VerticalAlignment="Top" Foreground="#FFFDF6F6" Height="20" Width="111"/>
        <CheckBox x:Name="chbWeightMgmt" Content="Weight Managment" HorizontalAlignment="Left" Margin="179,444,0,0" VerticalAlignment="Top" Foreground="#FFF9F3F3" Height="19" Width="166"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="30" Margin="499,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="31" Margin="499,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
        <RadioButton x:Name="rdbMale" Content="Male" HorizontalAlignment="Left" Margin="443,219,0,0" VerticalAlignment="Top" Height="20" Width="60"/>
        <RadioButton x:Name="rdbFemale" Content="Female" HorizontalAlignment="Left" Margin="510,219,0,0" VerticalAlignment="Top" Height="20" Width="75"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Height="30" Margin="421,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Left" Height="30" Margin="421,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
        <Label x:Name="lblWeightDesc" Content="(lbs)" HorizontalAlignment="Left" Margin="388,307,0,0" VerticalAlignment="Top" FontStyle="Italic" Foreground="#FFF1E7E7" Height="34" Width="42"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="480,358,0,0" VerticalAlignment="Top" Width="100" Height="26"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="480,398,0,0" VerticalAlignment="Top" Width="100" Height="26"/>
        <Label x:Name="lblTitle" Content="New Member Registration Form" HorizontalAlignment="Left" Margin="98,0,0,0" VerticalAlignment="Top" FontSize="29.333" Foreground="#FFFBF4F4" Height="57" Width="482"/>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="625,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnMainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="625,47,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="txtbDescription" HorizontalAlignment="Left" Margin="101,45,0,0" TextWrapping="Wrap" Text="Please enter the information for the new customer. If the customer is already a member, please click the &quot;Existing Member&quot; button to search for their information and automatically input it into this form.  Once all the information is inputed, please click the &quot;Register&quot; button to complete the registration process. " VerticalAlignment="Top" Height="80" Width="479" Foreground="#FFF7F5F5"/>
        <Button x:Name="btnExistingCustomer" Content="Existing Member" HorizontalAlignment="Left" Margin="605,114,0,0" VerticalAlignment="Top" Width="107" Click="button_Click"/>

    </Grid>
</Window>
