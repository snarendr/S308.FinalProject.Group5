<Window x:Name="winFeaturesPricing" x:Class="FitnessClub.FeaturesPricing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="FeaturesPricing" Height="600" Width="600" Background="#FFBF3417">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="21,10,0,0" VerticalAlignment="Top" Width="100" Source="Images/MSNLogo.png"/>
        <Label x:Name="lblSelectFeature" Content="Select Additional Feature:" HorizontalAlignment="Left" Margin="41,149,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbSelectFeatures" HorizontalAlignment="Left" Margin="205,153,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem/>
            <ComboBoxItem Content="Personal Training Plan"/>
            <ComboBoxItem Content="Locker Rental"/>
        </ComboBox>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="250,189,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnMainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="507,19,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="lblSelectedFeature" Content="Selected Feature:" HorizontalAlignment="Left" Margin="53,276,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbSelectedFeature" HorizontalAlignment="Left" Margin="161,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Personal Training Plan"/><LineBreak/><Run/></TextBlock>
        <Label x:Name="lblCurrentPrice" Content="Current Price:" HorizontalAlignment="Left" Margin="53,307,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbCurrentPrice" HorizontalAlignment="Left" Margin="161,312,0,0" TextWrapping="Wrap" Text="$5.00 " VerticalAlignment="Top"/>
        <Label x:Name="lblUpdatePrice" Content="Update Price:" HorizontalAlignment="Left" Margin="53,338,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbUpdatePrice" HorizontalAlignment="Left" Height="23" Margin="161,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="7.00"/>
        <GroupBox x:Name="grpUpdatePricing" Header="Update Feature Pricing" HorizontalAlignment="Left" Margin="36,251,0,0" VerticalAlignment="Top" BorderBrush="White" Height="171" Width="293" Foreground="White"/>
        <Button x:Name="btnUpdatePrice" Content="Update Price" HorizontalAlignment="Left" Margin="161,388,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="40,115,0,0" TextWrapping="Wrap" Text="Instructions:" VerticalAlignment="Top" Height="37" Width="480"/>

    </Grid>
</Window>
