<Window x:Name="winFeaturesPricing" x:Class="FitnessClub.FeaturesPricing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="Features Pricing" Height="500" Width="750" Background="#FFBF3417" ResizeMode="CanMinimize">
    <Grid x:Name="grdFeaturesPricing">
        <GroupBox x:Name="grpUpdatePricing" Header="Update Feature Pricing" HorizontalAlignment="Left" Margin="415,203,0,0" VerticalAlignment="Top" BorderBrush="White" Height="171" Width="310" Foreground="White"/>
        <Image x:Name="imgMSN" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Images/MSNLogo.png"/>
        <Label x:Name="lblSelectFeature" Content="Select Additional Feature:" HorizontalAlignment="Left" Margin="19,261,0,0" VerticalAlignment="Top" Foreground="White"/>
        <ComboBox x:Name="cmbSelectFeatures" HorizontalAlignment="Left" Margin="183,265,0,0" VerticalAlignment="Top" Width="202" TabIndex="0" SelectedIndex="0">
            <ComboBoxItem x:Name="cbiSelectFeature" Content="Please Select a Feature Below"/>
            <ComboBoxItem x:Name="cbiPersonalTrainingPlan" Content="Personal Training Plan"/>
            <ComboBoxItem x:Name="cbiLockerRental" Content="Locker Rental"/>
        </ComboBox>
        <Button x:Name="btnSubmit" Content="Select" HorizontalAlignment="Left" Margin="183,312,0,0" VerticalAlignment="Top" Width="100" TabIndex="1" Height="30" Click="btnSubmit_Click"/>
        <Button x:Name="btnMainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="657,11,0,0" VerticalAlignment="Top" Width="75" TabIndex="4" Height="20" Click="btnMainMenu_Click"/>
        <Label x:Name="lblSelectedFeature" Content="Selected Feature:" HorizontalAlignment="Left" Margin="437,226,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBlock x:Name="txbSelectedFeature" HorizontalAlignment="Left" Margin="545,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Text="Selected feature will appear here"/>
        <Label x:Name="lblCurrentPrice" Content="Current Price:" HorizontalAlignment="Left" Margin="437,257,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBlock x:Name="txbCurrentPrice" HorizontalAlignment="Left" Margin="545,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Width="163" Text="Current price will appear here"/>
        <Label x:Name="lblUpdatePrice" Content="Update Price:" HorizontalAlignment="Left" Margin="437,288,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="txbUpdatePrice" HorizontalAlignment="Left" Height="23" Margin="545,292,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" TabIndex="2"/>
        <Button x:Name="btnUpdatePrice" Content="Update Price" HorizontalAlignment="Left" Margin="545,332,0,0" VerticalAlignment="Top" Width="100" TabIndex="3" Height="30" Click="btnUpdatePrice_Click"/>
        <TextBlock x:Name="txbInstructions" HorizontalAlignment="Left" Margin="91,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="131" Width="377" Foreground="#FFFDEBEB"><Run Text="Instructions: To update the price for a feature, please select the feature in the dropdown menu below and click select. The current price for the selected feature will appear. To change the current price, type a new price in the update price textbox, and click the update price button. A message box will appear to confirm the new price for the selected feature. "/><LineBreak/><Run/></TextBlock>
        <Image x:Name="imgPersonalTrainning" HorizontalAlignment="Left" Height="98" Margin="497,61,0,0" VerticalAlignment="Top" Width="124" Source="Images/PersonalTrainingImg.png"/>
        <Image x:Name="imgLockerRental" HorizontalAlignment="Left" Height="100" Margin="634,61,0,0" VerticalAlignment="Top" Width="100" Source="Images/LockerRentalImg.png"/>
        <Label x:Name="lblTitle" Content="Manage Feature Pricing" HorizontalAlignment="Left" Margin="83,10,0,0" VerticalAlignment="Top" Foreground="#FFF5EBEB" Height="60" Width="364" FontSize="30"/>

    </Grid>
</Window>
