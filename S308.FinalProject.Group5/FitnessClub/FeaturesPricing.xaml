<Window x:Name="winFeaturesPricing" x:Class="FitnessClub.FeaturesPricing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="Features Pricing" Height="500" Width="750" Background="#FFBF3417" ResizeMode="CanMinimize">
    <Grid>
        <Image x:Name="imgMSN" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Images/MSNLogo.png"/>
        <Label x:Name="lblSelectFeature" Content="Select Additional Feature:" HorizontalAlignment="Left" Margin="45,254,0,0" VerticalAlignment="Top" Foreground="#FFF9F9F9"/>
        <ComboBox x:Name="cmbSelectFeatures" HorizontalAlignment="Left" Margin="209,258,0,0" VerticalAlignment="Top" Width="120" TabIndex="0">
            <ComboBoxItem x:Name="cbiSelectFeature" Content="Please Select a Feature Below"/>
            <ComboBoxItem x:Name="cbiPersonalTrainingPlan" Content="Personal Training Plan"/>
            <ComboBoxItem x:Name="cbiLockerRental" Content="Locker Rental"/>
        </ComboBox>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="254,294,0,0" VerticalAlignment="Top" Width="75" TabIndex="1" IsTabStop="False"/>
        <Button x:Name="btnMainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="659,10,0,0" VerticalAlignment="Top" Width="75" TabIndex="4"/>
        <Label x:Name="lblSelectedFeature" Content="Selected Feature:" HorizontalAlignment="Left" Margin="463,219,0,0" VerticalAlignment="Top" Foreground="#FFF9F9F9"/>
        <TextBlock x:Name="txbSelectedFeature" HorizontalAlignment="Left" Margin="571,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF9F9F9"><Run Text="Personal Training Plan"/><LineBreak/><Run/></TextBlock>
        <Label x:Name="lblCurrentPrice" Content="Current Price:" HorizontalAlignment="Left" Margin="463,250,0,0" VerticalAlignment="Top" Foreground="#FFF9F9F9"/>
        <TextBlock x:Name="txbCurrentPrice" HorizontalAlignment="Left" Margin="571,255,0,0" TextWrapping="Wrap" Text="$5.00 " VerticalAlignment="Top" Foreground="#FFF9F9F9"/>
        <Label x:Name="lblUpdatePrice" Content="Update Price:" HorizontalAlignment="Left" Margin="463,281,0,0" VerticalAlignment="Top" Foreground="#FFF9F9F9"/>
        <TextBox x:Name="txbUpdatePrice" HorizontalAlignment="Left" Height="23" Margin="571,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="7.00" TabIndex="2"/>
        <GroupBox x:Name="grpUpdatePricing" Header="Update Feature Pricing" HorizontalAlignment="Left" Margin="441,196,0,0" VerticalAlignment="Top" BorderBrush="White" Height="171" Width="293" Foreground="White"/>
        <Button x:Name="btnUpdatePrice" Content="Update Price" HorizontalAlignment="Left" Margin="461,312,0,0" VerticalAlignment="Top" Width="90" TabIndex="3"/>
        <TextBlock x:Name="txbInstructions" HorizontalAlignment="Left" Margin="105,61,0,0" TextWrapping="Wrap" Text="Instructions:" VerticalAlignment="Top" Height="37" Width="480" Foreground="#FFF9F9F9"/>
        <Image x:Name="imgPersonalTrainning" HorizontalAlignment="Left" Height="98" Margin="461,61,0,0" VerticalAlignment="Top" Width="124" Source="Images/PersonalTrainingImg.png"/>
        <Image x:Name="imgLockerRental" HorizontalAlignment="Left" Height="100" Margin="634,61,0,0" VerticalAlignment="Top" Width="100" Source="Images/LockerRentalImg.png"/>
        <Label x:Name="lblTitle" Content="Manage Feature Pricing" HorizontalAlignment="Left" Margin="101,10,0,0" VerticalAlignment="Top" Foreground="#FFF5EBEB" Height="60" Width="310" FontSize="26.667"/>

    </Grid>
</Window>
