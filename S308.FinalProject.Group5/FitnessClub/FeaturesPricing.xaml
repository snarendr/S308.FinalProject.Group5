<Window x:Name="winFeaturesPricing" x:Class="FitnessClub.FeaturesPricing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="FeaturesPricing" Height="600" Width="600" Background="#FFBF3417">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="23,24,0,0" VerticalAlignment="Top" Width="100" Source="Images/MSNLogo.png"/>
        <Label x:Name="lblSelectFeature" Content="Select Additional Feature:" HorizontalAlignment="Left" Margin="40,155,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbSelectFeatures" HorizontalAlignment="Left" Margin="204,159,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem/>
            <ComboBoxItem Content="Personal Training Plan"/>
            <ComboBoxItem Content="Locker Rental"/>
        </ComboBox>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="249,195,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnMainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="484,71,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="lblSelectedFeature" Content="Selected Feature:" HorizontalAlignment="Left" Margin="40,277,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbSelectedFeature" HorizontalAlignment="Left" Margin="148,282,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label x:Name="lblCurrentPrice" Content="Current Price:" HorizontalAlignment="Left" Margin="46,325,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbCurrentPrice" HorizontalAlignment="Left" Margin="148,330,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label x:Name="lblUpdatePrice" Content="Update Price:" HorizontalAlignment="Left" Margin="46,370,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbUpdatePrice" HorizontalAlignment="Left" Height="23" Margin="148,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <GroupBox x:Name="grpUpdatePricing" Header="Update Feature Pricing" HorizontalAlignment="Left" Margin="36,247,0,0" VerticalAlignment="Top" BorderBrush="White" Height="171" Width="293" Foreground="White"/>

    </Grid>
</Window>
