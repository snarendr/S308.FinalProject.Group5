<Window x:Class="FitnessClub.MemberInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="MemberInformation" Height="500" Width="750" Background="#FFBF3417">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Search Criteria " HorizontalAlignment="Left" Height="131" Margin="419,10,0,0" VerticalAlignment="Top" Width="279" Foreground="White"/>
        <Label x:Name="lblLastName" Content="Last Name: " HorizontalAlignment="Left" Height="30" Margin="419,44,0,0" VerticalAlignment="Top" Width="68" Foreground="White"/>
        <Label x:Name="lblPhoneNumber" Content="Phone Number:" HorizontalAlignment="Left" Height="30" Margin="419,100,0,0" VerticalAlignment="Top" Width="97" Foreground="White"/>
        <Label x:Name="lblEmail" Content="Email:" HorizontalAlignment="Left" Height="30" Margin="419,70,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="1.951,0.722" Foreground="White"/>
        <TextBox x:Name="txtLastNameInput" HorizontalAlignment="Left" Height="21" Margin="552,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBox x:Name="txtPhoneNumberInput" HorizontalAlignment="Left" Height="21" Margin="552,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBox x:Name="txtEmailInput" HorizontalAlignment="Left" Height="21" Margin="552,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <Button x:Name="bttnSearch" Content="Search" HorizontalAlignment="Left" Height="30" Margin="396,159,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="bttnClear" Content="Clear" HorizontalAlignment="Left" Height="30" Margin="514,157,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="bttnMainMenu" Content="Main Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="104" Margin="638,154,0,0" Height="33" />
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="95" VerticalAlignment="Top" Width="111" Source="Images/MSNLogo.png" RenderTransformOrigin="0.812,0.564"/>
        <Label x:Name="lblTitle" Content="Membership Information" HorizontalAlignment="Left" Margin="86,10,0,0" VerticalAlignment="Top" Foreground="#FFF5EBEB" Height="60" Width="310" FontSize="26.667"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="265" Margin="0,194,0,0" VerticalAlignment="Top" Width="742" SelectionChanged="dataGrid_SelectionChanged" CanUserResizeColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" FontSize="9"/>
                <DataGridTextColumn Header="First Name" FontSize="10"/>
                <DataGridTextColumn Header="Last Name" FontSize="10"/>
                <DataGridTextColumn Header="Start Date" FontSize="10"/>
                <DataGridTextColumn Header="End Date" FontSize="10"/>
                <DataGridTextColumn Header="Cost" FontSize="10"/>
                <DataGridTextColumn Header="Subtotal" FontSize="10"/>
                <DataGridTextColumn Header="Features" FontSize="10"/>
                <DataGridTextColumn Header="Type" FontSize="10"/>
                <DataGridTextColumn Header="Expiration Date" FontSize="10"/>
                <DataGridTextColumn Header="Phone" FontSize="10"/>
                <DataGridTextColumn Header="Email" FontSize="10"/>
                <DataGridTextColumn Header="Gender" FontSize="10"/>
                <DataGridTextColumn Header="Weight" FontSize="10"/>
                <DataGridTextColumn Header="Goal" FontSize="10"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
