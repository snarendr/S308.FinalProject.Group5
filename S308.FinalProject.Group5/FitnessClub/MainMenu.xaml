<Window x:Name="winMainMenu" x:Class="FitnessClub.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="Main Menu" Height="400" Width="748" Background="#FFBF3417" ResizeMode="CanMinimize">
    <Grid>
        <GroupBox x:Name="grpSales_Membership_Copy" Header="Pricing Management" HorizontalAlignment="Left" Height="149" Margin="484,195,0,0" VerticalAlignment="Top" Width="219" Foreground="White"/>

        <GroupBox x:Name="grpSales_Membership" Header="Sales and Membership" HorizontalAlignment="Left" Height="131" Margin="51,197,0,0" VerticalAlignment="Top" Width="356" Foreground="White"/>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Images/MSNLogo.png"/>
        <Button x:Name="btnMemberInformation" Content="Member Information" HorizontalAlignment="Left" Margin="154,270,0,0" VerticalAlignment="Top" Width="145" Height="40"/>
        <Button x:Name="btnFeaturesPricing" Content="Features Pricing" HorizontalAlignment="Left" Margin="525,218,0,0" VerticalAlignment="Top" Width="145" Height="40"/>
        <Button x:Name="btnMembershipSales" Content="Membership Sales" HorizontalAlignment="Left" Margin="71,218,0,0" VerticalAlignment="Top" Width="145" Height="40"/>
        <Button x:Name="btnMembershipPricing" Content="Membership Pricing" HorizontalAlignment="Left" Margin="525,270,0,0" VerticalAlignment="Top" Width="145" Height="40"/>
        <Button x:Name="btnMembershipRegistration" Content="Membership Registration" HorizontalAlignment="Left" Margin="240,218,0,0" VerticalAlignment="Top" Width="145" Height="40"/>
        <Image x:Name="imgFitnessCenter" HorizontalAlignment="Left" Margin="215,6,0,181" Width="304" Source="Images/FitnessCenterImg.jpg"/>

    </Grid>
</Window>
